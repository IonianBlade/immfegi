@model immfegi.ViewModels.NewViewModels.Articles.ArticleViewModel

@{
    ViewData["Title"] = "Подать статью";
}

<div class="container py-5 h-100">
	<div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col-12 col-md-8 ">
			<div class="card shadow-2-strong" style="border-radius: 1rem;">
				<div class="card-body p-5 text-center">
					<h3 class="mb-5">Регистрационная форма</h3>
					<a href="https://disk.yandex.ru/i/XoML2o4BiNRO9w" target="_blank">ОБРАЗЕЦ ЗАЯВКИ</a>
					@if (TempData["Error"] != null)
					{
						<div class="col-md-12 alert alert-danger">
							<span><b>Ошибка!</b> - @TempData["Error"] </span>
						</div>
					}
					@if (TempData["Success"] != null)
					{
						<div class="col-md-12 alert alert-success">
							<span><b>Успешно!</b> - @TempData["Success"] </span>
						</div>
					}
					<form asp-action="Create" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" id="ApplicationUserId" name="ApplicationUserId" asp-for="ApplicationUserId" />
						
						<div class="form-group m-2">
							<label asp-for="Surname" class="control-label"></label>
							<input asp-for="Surname" class="form-control rounded-pill" />
							<span asp-validation-for="Surname" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Name" class="control-label"></label>
							<input asp-for="Name" class="form-control rounded-pill" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Patronymic" class="control-label"></label>
							<input asp-for="Patronymic" class="form-control rounded-pill" />
							<span asp-validation-for="Patronymic" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="ArticleNameOnRussian" class="control-label"></label>
							<input asp-for="ArticleNameOnRussian" class="form-control rounded-pill" />
							<span asp-validation-for="ArticleNameOnRussian" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="ArticleNameOnEnglish" class="control-label"></label>
							<input asp-for="ArticleNameOnEnglish" class="form-control rounded-pill" />
							<span asp-validation-for="ArticleNameOnEnglish" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Section" class="control-label"></label>
							<select asp-for="Section"  class="form-control rounded-pill" placeholder="Выберите секцию">
								<option>Секция 1. Фундаментальные и прикладные аспекты высшей математики в современных исследованиях.</option>
								<option>Секция 2. Физические исследования природных процессов.</option>
								<option>Секция 3. Современные прикладные информационные системы и геотехнологии</option>
								<option>Секция 4. Развитие исследований в гидрометеорологии и экологии.</option>
							</select>
							<span asp-validation-for="Section" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="PhoneNumber" class="control-label"></label>
							<input asp-for="PhoneNumber" class="form-control rounded-pill" />
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Email" class="control-label"></label>
							<input asp-for="Email" class="form-control rounded-pill" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Article" class="control-label"></label>
							<input type="file" accept=".doc, .docx" asp-for="Article" />
							<span asp-validation-for="Article" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<label asp-for="Request" class="control-label"></label>
							<input type="file" accept=".doc, .docx" asp-for="Request" />
							<span asp-validation-for="Request" class="text-danger"></span>
						</div>
						<div class="form-group m-2">
							<input class="btn btn-outline-success float-right rounded-pill" type="submit" value="Зарегистрироваться" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>